{# src/Test/PlatformBundle/Resources/views/Advert/index.html.twig #}

{% extends "TestPlatformBundle::layout.html.twig" %}

{% block title %}Accueil - {{ parent() }}{% endblock %}

{% block testplatform_body %}
<h2>Liste des annonces</h2>

<ul>
	{% for advert in listAdverts %}
		<li>
			<a href="{{path('test_platform_view', {'id':advert.id})}}">
			{{advert.title}}
			</a>
			par {{advert.author}}, le {{advert.date|date('d/m/Y')}}
			</li>
			{% else %}
			<li>Pas (encore) d'annonces</li>
	{% endfor %}
</ul>

{% endblock %}
